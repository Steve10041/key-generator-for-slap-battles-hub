<body>

  <h1>Key Generato</h1>

  <div class="key-container">
    <input type="text" id="generatedKey" readonly>
    <button onclick="copyKey()">Copiar</button>
  </div>

  <script>
    function generateKey() {
      const part1 = Math.random().toString(36).substring(2, 8).toUpperCase();
      const part2 = Math.random().toString(36).substring(2, 10).toUpperCase();
      return `FREE_${part1}_${part2}`;
    }

    function copyKey() {
      const keyInput = document.getElementById("generatedKey");
      keyInput.select();
      keyInput.setSelectionRange(0, 99999); // Para móviles
      document.execCommand("copy");
      alert("Key copiada: " + keyInput.value);
    }

    // Generar una key automáticamente al cargar
    document.getElementById("generatedKey").value = generateKey();
  </script>

</body>
