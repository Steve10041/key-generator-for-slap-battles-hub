      text-shadow: 0 0 10px #00ffcc;
    }

    .key-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
    }

    #generatedKey {
      font-size: 20px;
      background-color: #333;
      padding: 10px 20px;
      border: none;
      border-radius: 8px;
      color: #0ff;
      margin-right: 10px;
    }

    button {
      padding: 10px 20px;
      background-color: #00cc66;
